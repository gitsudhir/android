{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
  "esModuleInterop": true,
    "strict": true,
    "jsx": "react-native",  // Add this for React Native if it's missing
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}

